<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatarProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/drawable_r25dp_outline"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Username"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/textSubColor" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="example@gmail.com"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/textSubColor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/ivngonngu"
            style="@style/ButtonOutlineStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="Ngôn ngữ" />

        <Button
            android:id="@+id/playlist"
            style="@style/ButtonOutlineStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="Danh sách yêu thích" />


        <Button
            android:id="@+id/editProfile"
            style="@style/ButtonOutlineStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="Chỉnh sửa thông tin cá nhân" />

        <Button
            android:id="@+id/signOutButton"
            style="@style/ButtonPrimaryStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:text="Sign Out" />
    </LinearLayout>


</LinearLayout>
