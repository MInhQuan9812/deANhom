<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeAnNhom" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor">#121212</item>
        <item name="android:actionBarStyle">@style/BaseActionBar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="ButtonPrimaryStyleLarge">
        <item name="android:height">40dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/drawable_r10dp</item>
        <item name="backgroundTint">@color/primaryColor
        </item>
    </style>

    <style name="ButtonOutlineStyleLarge" parent="ButtonPrimaryStyleLarge">
        <item name="android:background">@drawable/drawable_r10dp_outline</item>
        <item name="backgroundTint">
            @null
        </item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="ButtonClassicStyleLarge" paren="ButtonPrimaryStyleLarge">
        <item name="backgroundTint">#656565</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>